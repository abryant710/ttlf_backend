<%- include('../../partials/head.ejs') %>
<%- include('../../partials/nav.ejs') %>
<div class="manage-admins">
  <h2 class="manage-admins-title">Manage admin users</h2>
  <div class="manage-admins-panel">
    <div class="manage-admins-panel__header">
      <p class="text-primary">First name</p>
      <p class="text-primary">Last name</p>
      <p class="text-primary">Email</p>
      <p class="text-danger">Delete?</p>
    </div>
    <% adminUsers.forEach(({ firstName, lastName, email }) => { %>
      <div class="manage-admins-panel__admin">
        <p><%= firstName %></p>
        <p><%= lastName %></p>
        <p><%= email %></p>
        <p><button type="submit" class="btn btn-primary" onclick="deleteAdmin('<%= email %>');">Delete</button></p>
      </div>
    <% }); %> 
  </div>
</div>
<div class="hidden">
  <%- include('../../components/forms/delete-admin-form.ejs', {
    sendMessage,
  }) %>
</div>
<%- include('../../components/modal.ejs', {
  modalTitle: 'Delete',
  modalText: `Are you sure you want to delete this user?`,
  modalTitle: 'Delete admin',
  formClass: 'delete-admin-form',
}) %>
<%- include('../../partials/foot.ejs') %> 