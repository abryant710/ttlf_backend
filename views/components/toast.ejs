<div class="toast show toast-position <%= toastCss %>-background" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="toast-header <%= toastCss %>-background">
    <strong class="mr-auto text-<%= toastCss %>"><%= toastType %></strong>
    <button type="button" class="ml-2 mb-1 close color-primary toast-close" data-dismiss="toast" aria-label="Close">
      <span class="text-dark" aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    <p class="text-center text-<%= toastCss %>"><%= toastMsg %></p>
  </div>
</div>