<input type="hidden" name="_csrf" value="<%= csrfToken %>">
<button type="submit" class="btn btn-primary mb-2"><%= submitButtonText %></button>
<% if (formMessage) { %> 
  <% if (formMessage.error) { %>
    <%- include('../toast.ejs', {
      toastCss: 'danger',
      toastType: 'Error',
      toastMsg: formMessage.error ,
    }) %>
  <% } else if (formMessage.success) { %> 
    <%- include('../toast.ejs', {
      toastCss: 'success',
      toastType: 'Success',
      toastMsg: formMessage.success ,
    }) %>
  <% } %>
<% } %>