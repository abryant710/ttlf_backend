<%- include('../partials/head.ejs') %>
<div class="login-form">
  <form action="/login" method="POST">
    <div class="login-form__imgcontainer">
      <img src="images/ttlf_0001.png" alt="Avatar" class="login-form__avatar">
    </div>

    <div class="login-form__container">
      <label for="uname"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="uname" required>

      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="psw" required>

      <button type="submit">Login</button>
    </div>

    <div class="login-form__container" style="background-color:#f1f1f1">
      <span class="login-form__psw">Reset <a href="/reset">password?</a></span>
    </div>
  </form>
</div>
