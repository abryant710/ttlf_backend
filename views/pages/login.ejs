<%- include('../partials/head.ejs') %>
<div class="login">
  <div class="login-panel">
    <img src="images/ttlf_0001.png" class="login-img" />
    <form action="/login" method="POST">
      <fieldset>
        <div class="form-group">
          <label for="ttlfInputEmail">Email address</label>
          <input name="email" type="email" class="form-control" id="ttlfInputEmail" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="ttlfInputPassword">Password</label>
          <input name="password" type="password" class="form-control" id="ttlfInputPassword" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Login</button>
        <a class="text-center mb-2" href="/send-reset">Reset Password?</a>
        <% if (loginError) { %> 
          <p class="text-center text-danger">Error: login was unsuccessful</p>
        <% } %>
      </fieldset>
    </form>
  </div>
</div>
<%- include('../partials/foot.ejs') %> 