<%- include('../partials/head.ejs') %>
<% const { firstName, lastName, email } = formAttributes; %> 
<div class="create-admin">
  <div class="create-admin-panel">
    <img src="images/ttlf_0001.png" class="create-admin-img" />
    <form action="/create-admin" method="POST">
      <fieldset>
        <%- include('../components/forms/first-name-input.ejs', { firstName }) %>
        <%- include('../components/forms/last-name-input.ejs', { lastName }) %>
        <%- include('../components/forms/email-input.ejs', { email }) %>
        <%- include('../components/forms/password.ejs') %>
        <%- include('../components/forms/repeat-password.ejs') %>
        <%- include('../components/forms/form-submit.ejs', {
          formMessage,
          submitButtonText: 'Create admin user',
        }) %>
        <a class="text-center mb-2" href="/login">Login?</a>
      </fieldset>
    </form>
  </div>
</div>
<%- include('../partials/foot.ejs') %> 