{
  "name": "ttlf-backend",
  "version": "1.0.0",
  "description": "ttlf.net backend app",
  "main": "app.js",
  "author": "Alex Bryant",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/abryant710/ttlf-backend/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abryant710/ttlf-backend.git"
  },
  "keywords": [
    "node",
    "sass",
    "js",
    "ttlf"
  ],
  "homepage": "https://github.com/abryant710/ttlf-backend#readme",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build:app": "npm run build:css && npm run clean:build && git archive -v -o www/ttlf-backend.zip --format=zip HEAD",
    "deploy": "npm run build:app && eb deploy $(echo $TTLF_EB_ENV) --profile $(echo $TTLF_EB_PROFILE)",
    "clean:build": "rm -rf www/* || true",
    "clean:yarn": "rm -rf node_modules || true && rm yarn.lock || true && yarn cache clean && yarn install",
    "lint": "npm-run-all lint:js lint:css",
    "lint:js": "npx eslint --fix .",
    "lint:css": "sass-lint-auto-fix --config-sass-lint .sass-lint.yml -c .sass-lint-auto-fix.yml",
    "watch:sass": "node-sass sass/main.scss public/css/style.css -w",
    "compile:sass": "node-sass sass/main.scss public/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/css/style.comp.css -o public/css/style.prefix.css",
    "compress:css": "node-sass public/css/style.prefix.css public/css/style.min.css --output-style compressed",
    "remove_unused:css": "rm public/css/style.comp.css && rm public/css/style.prefix.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css remove_unused:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "sass": "^1.30.0",
    "sass-lint": "^1.13.1",
    "sass-lint-auto-fix": "^0.21.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-flash": "^0.1.1",
    "connect-mongodb-session": "^2.4.1",
    "csurf": "^1.11.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "mongodb": "^3.6.3",
    "mongoose": "^5.11.9",
    "nodemailer": "^6.4.17",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "uuid": "^8.3.2"
  }
}
